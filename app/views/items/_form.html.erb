 <%= form_for [@list, @new_item] do |f| %> 

  <div class="form-group">
    <h3>Add an Item:</h3><br/>
  </div>
 
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "Add an Item:" %>
  </div>

  <div class= "form-group">
    <%= f.submit "Create Item", class: 'btn btn-success' %>
  </div>

 <% end %>



