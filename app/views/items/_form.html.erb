 <%= form_for [@list, @list.items.new] do |f| %> 

  <div class="form-group">
    <h4>Add an Item:</h4><br/>
  </div>
 
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Add an Item:" %>
  </div>

  <div class= "form-group">
    <%= f.submit "Create Item", class: 'btn btn-success' %>
  </div>

 <% end %>



